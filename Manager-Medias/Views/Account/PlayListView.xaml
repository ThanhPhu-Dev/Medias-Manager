            <Button x:Name="Item" Background="#FF303030"
                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                    Height="120"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Padding="8"
                    Cursor="Hand"
                    Margin="0 0 0 24">
                <Grid>
                    <materialDesign:Card
                        UniformCornerRadius="3"
                        Background="Transparent">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding ActualHeight, ElementName=Item}" />
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" CornerRadius="3" ClipToBounds="True">
                                <Image Source="/Images/logo.png" />
                            </Border>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Bao Nhiêu - Chillies (Official Lyrics Video)"
                                           TextWrapping="Wrap"
                                           FontSize="17"
