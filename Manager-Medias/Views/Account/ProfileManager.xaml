<UserControl x:Class="Manager_Medias.Views.Account.ProfileManager"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Manager_Medias.Views.Account"
             xmlns:cv="clr-namespace:Manager_Medias.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Storyboard x:Key="OpenModal">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Canvas.Top)" Storyboard.TargetName="ModalNewProfile">
                <DiscreteDoubleKeyFrame KeyTime="0:0:0.0" Value="-500" />
                <DiscreteDoubleKeyFrame KeyTime="0:0:0.15" Value="4" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="CloseModal">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Canvas.Top)" Storyboard.TargetName="ModalNewProfile">
                <DiscreteDoubleKeyFrame KeyTime="0:0:0.0" Value="4" />
                <DiscreteDoubleKeyFrame KeyTime="0:0:0.15" Value="-500" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!--STYLE-->
        <Style x:Key="ButtonProfileItem" TargetType="{x:Type Button}"
               BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Height" Value="120" />
            <Setter Property="Width" Value="120" />
            <Setter Property="BorderBrush" Value="#FFCDCDCD" />
            <Setter Property="BorderThickness" Value="0.2" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter Content="{TemplateBinding Content}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonLogin" TargetType="{x:Type Button}"
               BasedOn="{StaticResource MaterialDesignRaisedLightButton}">
            <Setter Property="Background" Value="{DynamicResource SecondaryAccentBrush}" />
            <Setter Property="Foreground" Value="#000" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D4FEBB00" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="TextBoxErrorTemplate">
            <StackPanel>
                <!-- Placeholder for the DataGridTextColumn itself -->
                <AdornedElementPlaceholder />
                <ItemsControl ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}"
                                       Foreground="{DynamicResource SecondaryAccentBrush}"
                                       Margin="0 12 0 0" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ControlTemplate>

        <!--CONVERTER-->
        <cv:ProfileImageConverter x:Key="pathAbsolute" />
        <cv:ProfileLoginEnableConverter x:Key="PrStatusCvt" />
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="btnOpenModal">
            <BeginStoryboard Storyboard="{StaticResource OpenModal}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="btnCancelModal">
            <BeginStoryboard Storyboard="{StaticResource CloseModal}" />
        </EventTrigger>
    </UserControl.Triggers>

    <Border Background="#000" Margin="20 30" CornerRadius="3">
        <StackPanel Margin="60 30">
            <DockPanel>
                <Label DockPanel.Dock="Left" Content="Quản lý các hồ sơ của bạn" Foreground="#fff" FontSize="22" />
                <Button x:Name="btnOpenModal"
                        DockPanel.Dock="Right"
                        Background="#febb00"
                        VerticalAlignment="Center"
                        Padding="16 0"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Stretch"
                        HorizontalAlignment="Right"
                        Height="40">
                    <DockPanel LastChildFill="True"
                                HorizontalAlignment="Stretch">
                        <materialDesign:PackIcon DockPanel.Dock="Left" Kind="Plus" VerticalAlignment="Center" VerticalContentAlignment="Center" Foreground="#000" />
                        <Label DockPanel.Dock="Right" Content="Tạo mới" VerticalAlignment="Center" VerticalContentAlignment="Center"
                               Margin="0 0 0 2" />
                    </DockPanel>
                </Button>
            </DockPanel>
            <Canvas Panel.ZIndex="100">
                <Border x:Name="ModalNewProfile"
                        Canvas.Top="-500" Width="550" Height="340"
                        CornerRadius="3" ClipToBounds="True"
                        Background="#FF303030"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Canvas.Left="114">
                    <Grid Width="{Binding ActualWidth, ElementName=ModalNewProfile}" Height="{Binding ActualHeight, ElementName=ModalNewProfile}">
                        <StackPanel HorizontalAlignment="Center" Margin="0 20 0 0">
                            <Label Content="TẠO HỒ SƠ MỚI" Foreground="White" FontSize="32"
                                       FontWeight="DemiBold" HorizontalContentAlignment="Center"
                                       Margin="0 12 0 0" />
                            <Label Content="Tạo hồ sơ cho người dùng mới cùng xem phim" Foreground="#FFCFCFCF"
                                       FontWeight="ExtraLight" HorizontalContentAlignment="Center" />
                            <DockPanel LastChildFill="True" Margin="0 16 0 0">
                                <Button  DockPanel.Dock="Left"
                                         Margin="0 0 16 0"
                                         BorderBrush="#FFCDCDCD"
                                         BorderThickness="0.2"
                                         Height="80"
                                         Width="80"
                                         Padding="0"
                                         Background="#FFD4D4D4"
                                         Command="{Binding OpenFileDialogCmd}">
                                    <Image Source="{Binding PathAvatarFile, Converter={StaticResource pathAbsolute}}"
                                            Width="74" Height="74"
                                            Stretch="UniformToFill"
                                            Cursor="Hand" />
                                </Button>
                                <TextBox materialDesign:HintAssist.Foreground="#fff"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                         materialDesign:HintAssist.HintOpacity="0.8"
                                         materialDesign:HintAssist.Hint="Tên"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         VerticalAlignment="Center"
                                         Padding="12 0"
                                         Background="#FF4B4B4B"
                                         Foreground="#fff"
                                         FontSize="11"
                                         CaretBrush="#febb00"
                                         Height="34"
                                         Text="{Binding NewProfileName, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}"
                                         Validation.ErrorTemplate="{StaticResource TextBoxErrorTemplate}" />
                            </DockPanel>
                            <Grid Margin="0 40 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0"
                                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                        HorizontalAlignment="Right"
                                        Margin="0 0 20 0"
                                        Background="#febb00"
                                        Foreground="#000"
                                        materialDesign:ButtonAssist.CornerRadius="3"
                                        Width="100"
                                        Height="32"
                                        ToolTip="Lưu"
                                        Content="Lưu"
                                        Command="{Binding NewProfileCmd}" />
                                <Button Grid.Column="1"
                                        x:Name="btnCancelModal"
                                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                        HorizontalAlignment="Left"
                                        Margin="20 0 0 0"
                                        Background="#707070"
                                        Foreground="#fff"
                                        materialDesign:ButtonAssist.CornerRadius="3"
                                        Width="100"
                                        Height="32"
                                        ToolTip="Huỷ"
                                        Content="Huỷ"
                                        Command="{Binding CloseFileDialogCmd}" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Canvas>
            <ListView Margin="0 20 0 0" Panel.ZIndex="1" ItemsSource="{Binding Profiles}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4">
                        </UniformGrid>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="16" HorizontalAlignment="Center">
                            <Button Style="{StaticResource ButtonProfileItem}" x:Name="ProfileItem">
                                <Grid HorizontalAlignment="Stretch">
                                    <Image Source="{Binding Avatar, Converter={StaticResource pathAbsolute}}"
                                        Stretch="UniformToFill"
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        Cursor="Hand">
                                    </Image>
                                    <Grid Background="#E1000000" x:Name="EditGrid" Opacity="0">
                                        <materialDesign:PackIcon
                                    Kind="Pencil" Foreground="{DynamicResource SecondaryAccentBrush}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Width="24"
                                    Height="24"
                                    ToolTip="Chỉnh sửa" />
                                    </Grid>
                                </Grid>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter" SourceName="ProfileItem">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="EditGrid"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     From="0" To="1"
                                                                     Duration="0:0:0.15" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave" SourceName="ProfileItem">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="EditGrid"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     From="1" To="0"
                                                                     Duration="0:0:0.15" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            <Label Content="{Binding Name}" Foreground="#fff" Margin="0 12 0 0" />
                            <Button Margin="0 8 0 0"
                                    Height="32"
                                    Content="Đăng nhập"
                                    HorizontalAlignment="Center"
                                    Tag="{Binding Id}"
                                    Style="{StaticResource ButtonLogin}"
                                    IsEnabled="{Binding Status, Converter={StaticResource PrStatusCvt}}"
                                    Command="{Binding DataContext.SwitchProfileCmd,
                                    RelativeSource={RelativeSource Mode=FindAncestor,
                                                               AncestorType={x:Type ItemsControl}}}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Border>
</UserControl>