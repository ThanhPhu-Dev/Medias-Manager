<UserControl x:Class="Manager_Medias.Views.Admin.MediaManagementUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cvt="clr-namespace:Manager_Medias.Converters"
             xmlns:local="clr-namespace:Manager_Medias.Views.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1000" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <cvt:ConvertImage x:Key="imageCvt" />
    </UserControl.Resources>
    <Grid x:Name="gridParent">
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="280*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="2">
            <ScrollViewer>
                <StackPanel>
                    <Grid>
                        <Button Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Height="80" Name="btMoveRight"
                            VerticalAlignment="Center" Panel.ZIndex="2"
                            HorizontalAlignment="Right" Margin="0 20 -10 0"
                            Click="btMoveRight_Click">
                            <Grid>
                                <materialDesign:PackIcon Kind="ArrowRight" Height="80" Width="80"/>
                            </Grid>
                        </Button>
                        <Button Background="{x:Null}"
                            BorderBrush="{x:Null}" Margin="-10 20 0 0"
                            Height="80" Name="btMoveLeft"
                            VerticalAlignment="Center" Panel.ZIndex="2"
                            HorizontalAlignment="Left"
                            Click="btMoveLeft_Click" Width="106">
                            <Grid>
                                <materialDesign:PackIcon Kind="ArrowLeft" Height="80" Width="80"/>
                            </Grid>
                        </Button>
                        <StackPanel Panel.ZIndex="1">
                            <TextBlock FontSize="32" HorizontalAlignment="Center" 
                                       FontWeight="Bold">Danh sách phim hay</TextBlock>
                            <ListView Name="lvMovies" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                      ItemsSource="{Binding MovieList}"
                                      Height="140">

                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>

                                        <Border BorderBrush="Gray" BorderThickness="2" Name="boderTemplate"
                                                MouseLeftButtonDown="boderTemplate_MouseLeftButtonDown"
                                                MouseLeave="boderTemplate_MouseLeave"
                                                Height="115" Width="200">
                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Cập nhật thông tin" Name="btOpenMovieDetail"
                                                              Click="btOpenMovieDetail_Click">
                                                        <MenuItem.Icon>
                                                            <materialDesign:PackIcon Kind="Update"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Xóa phim này">
                                                        <MenuItem.Icon>
                                                            <materialDesign:PackIcon Kind="Delete"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </Border.ContextMenu>
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding Poster, Converter={StaticResource imageCvt}}" Stretch="Uniform"/>
                                            </Border.Background>
                                            <MediaElement Source="{Binding Video, Converter={StaticResource imageCvt}}"
                                                          LoadedBehavior="Manual"
                                                          UnloadedBehavior="Manual" Name="movieItem"
                                                          Volume="0"/>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Grid>

                    <Grid Background="AliceBlue"
                          Height="500"
                          Name="detailPanel">
                        <StackPanel Orientation="Horizontal">
                            <Border BorderBrush="Gray" Margin="5 0 5 5"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left" Name="borderMedia"
                                    BorderThickness="2" >

                                <Grid MouseWheel="Grid_MouseWheel">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    
                                    <ToolBar>
                                        <Button Name="btOpenFolder"
                                                Click="btOpenFolder_Click">
                                            <materialDesign:PackIcon Kind="Folder"/>
                                        </Button>
                                        <Separator />
                                        <Button Name="btPlayMovie" Click="btPlayMovie_Click">
                                            <materialDesign:PackIcon Kind="Play"/>
                                        </Button>
                                        <Button Name="btPauseMovie" Click="btPauseMovie_Click">
                                            <materialDesign:PackIcon Kind="Pause"/>
                                        </Button>
                                        <Button Name="btStopMovie">
                                            <materialDesign:PackIcon Kind="Stop"/>
                                        </Button>
                                        <Button x:Name="btFullScreen" Click="btFullScreen_Click">
                                            <materialDesign:PackIcon Kind="Fullscreen"/>
                                        </Button>
                                    </ToolBar>
                                    <Border Grid.Row="1" BorderBrush="Gray" 
                                            Name="boderMedia"
                                            BorderThickness="2">
                                        <MediaElement Name="mePlayer" Height="220" Width="380"
                                                      Source="{Binding ElementName=lvMovies,Path=SelectedItem.Video, Converter={StaticResource imageCvt}}"
                                                      LoadedBehavior="Manual" Volume="0"/>
                                    </Border>


                                    <StatusBar Grid.Row="2">
                                        <StatusBar.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                </Grid>
                                            </ItemsPanelTemplate>
                                        </StatusBar.ItemsPanel>
                                        <StatusBarItem>
                                            <TextBlock Name="lblProgressStatus">00:00:00</TextBlock>
                                        </StatusBarItem>
                                        <StatusBarItem Grid.Column="1" HorizontalContentAlignment="Stretch">
                                            <Slider Name="sliProgress" 
                                                    Thumb.DragCompleted="sliProgress_DragCompleted" 
                                                    ValueChanged="sliProgress_ValueChanged" />
                                        </StatusBarItem>
                                        <StatusBarItem Grid.Column="2">
                                            <ProgressBar Name="pbVolume" Width="50" Height="12" Maximum="1"
                                                         Value="{Binding ElementName=mePlayer, Path=Volume}" />
                                        </StatusBarItem>
                                    </StatusBar>
                                </Grid>
                            </Border>

                            <StackPanel>
                                
                            </StackPanel>
                            
                            
                        </StackPanel>

                    </Grid>


                    <Grid>
                        <Button Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Height="80" Name="btMoveRight2"
                            VerticalAlignment="Center" Panel.ZIndex="2"
                            HorizontalAlignment="Right" Margin="0 20 -10 0"
                            Click="btMoveRight_Click">
                            <Grid>
                                <materialDesign:PackIcon Kind="ArrowRight" Height="80" Width="80"/>
                            </Grid>
                        </Button>
                        <Button Background="{x:Null}"
                            BorderBrush="{x:Null}" Margin="-10 20 0 0"
                            Height="80" Name="btMoveLeft2"
                            VerticalAlignment="Center" Panel.ZIndex="2"
                            HorizontalAlignment="Left"
                            Click="btMoveLeft_Click" Width="106">
                            <Grid>
                                <materialDesign:PackIcon Kind="ArrowLeft" Height="80" Width="80"/>
                            </Grid>
                        </Button>
                        <StackPanel Panel.ZIndex="1">
                            <TextBlock FontSize="32" HorizontalAlignment="Center" 
                                       FontWeight="Bold">Danh sách phim cùi</TextBlock>
                            <ListView Name="lvMovies2" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                      ItemsSource="{Binding MovieList}"
                                      Height="140">

                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Gray" BorderThickness="2" Name="boderTemplate2"
                                MouseLeftButtonDown="boderTemplate_MouseLeftButtonDown"
                                MouseLeave="boderTemplate_MouseLeave"
                                Height="115" Width="200">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding Poster, Converter={StaticResource imageCvt}}" Stretch="Uniform"/>
                                            </Border.Background>
                                            <MediaElement Source="{Binding Video, Converter={StaticResource imageCvt}}"
                                                          LoadedBehavior="Manual"
                                                          UnloadedBehavior="Manual" Name="movieItem2"
                                                          Volume="0"/>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

        </Grid>



    </Grid>
</UserControl>
