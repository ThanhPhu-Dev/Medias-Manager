<UserControl x:Class="Manager_Medias.Views.Admin.StatisticalUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manager_Medias.Views.Admin"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="30 40 0 0">
            <!--TAB-->
            <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Width="750">
                <Button Uid="0"
                            Width="250"
                            Content="Top 10 phim được xem nhiều nhất"
                            Height="40"
                            Margin="30 0 0 0"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Foreground="#1315ab"
                            Click="Button_Tab_Click">
                </Button>
                <Button Uid="1"
                            Width="250"
                            Content="Top 10 phim được yêu thích"
                            Height="40"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Foreground="#1315ab"
                            Click="Button_Tab_Click">
                </Button>
                <Button Uid="2"
                            Width="250"
                            Content="Top 10 điểm IMDB"
                            Height="40"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Foreground="#1315ab"
                            Click="Button_Tab_Click">
                </Button>
            </StackPanel>
            <Grid x:Name="GridCursor"
                  Width="250" Margin="30 0 0 0"
                  Height="5"
                  Background="#FF2196F3"
                  HorizontalAlignment="Left" />

            <Grid Margin="10"
                      Width="850"
                      Height="5"
                      Background="Gray"/>

            <!--TRIPS-->
            <Grid x:Name="Grid_List"
                      Margin="0 10 0 0"
                      Height="530">
                <StackPanel Name="mostViewChartPanel">
                        <StackPanel Orientation="Horizontal" Height="462"                                 
                                    Margin="0,0,0.2,0">
                        <lvc:PieChart Series="{Binding chartData}"
                                  Height="400"
                                  Foreground="Black"
                                  FontSize="20"                                  
                                  LegendLocation="Right"
                                  DataClick="PieChart_DataClick"  Width="580"/>
                            <ComboBox Width="151" SelectedIndex="0" HorizontalAlignment="Right"
                                      VerticalAlignment="Top">
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Foreground="PaleVioletRed" Kind="Clock" />
                                        <TextBlock Padding="5 0 0 5">Thống kê theo quý</TextBlock>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountBalanceWallet" Foreground="DarkSeaGreen"/>
                                        <TextBlock Padding="5 0 0 5">Thống kê theo tháng</TextBlock>
                                    </StackPanel>
                                </ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <TextBlock Text="Phim có lượt xem cao nhất: "
                                   FontSize="30"
                                   FontWeight="Bold"/>
                    </StackPanel>

                <StackPanel Name="mostRateChartPanel">
                    <StackPanel Orientation="Horizontal" Height="462"                                 
                                    Margin="0,0,0.2,0">
                        <lvc:CartesianChart Series="{Binding Data2}"
                                                Height="400"
                                                Foreground="Black"
                                                FontSize="20"     
                                                LegendLocation="Right"
                                                DataClick="PieChart_DataClick"  Width="580" >
                            <!--<lvc:CartesianChart.AxisY >
                                    <lvc:Axis Title="TestTitle" MinValue="0" MaxValue="9000"/>
                                </lvc:CartesianChart.AxisY>
                                <lvc:CartesianChart.AxisX >
                                    <lvc:Axis Title="TestTitle2" MinValue="0" MaxValue="10000"/>
                                </lvc:CartesianChart.AxisX>-->
                        </lvc:CartesianChart>
                        <ComboBox Width="151" SelectedIndex="0" HorizontalAlignment="Right"
                                      VerticalAlignment="Top">
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Foreground="PaleVioletRed" Kind="Clock" />
                                    <TextBlock Padding="5 0 0 5">Thống kê theo quý</TextBlock>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountBalanceWallet" Foreground="DarkSeaGreen"/>
                                    <TextBlock Padding="5 0 0 5">Thống kê theo tháng</TextBlock>
                                </StackPanel>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <TextBlock Text="Phim có rating cao nhất: "
                                   FontSize="30"
                                   FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
