<UserControl x:Class="Manager_Medias.Views.Audio.DetailAudioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Manager_Medias.Views.Audio"
             mc:Ignorable="d"
             d:DesignHeight="585" d:DesignWidth="1200"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <UserControl.Resources>
        <Style TargetType="materialDesign:PackIcon" x:Key="iconPlay">
            <Setter Property="Foreground" Value="#fff" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Width" Value="35" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="15 0" />
        </Style>
        <DataTemplate x:Key="ItemTemplate">
            <Grid  Margin="8 8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding stt}"
                           FontSize="17"
                           Foreground="#fff"
                           Grid.Column="0"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{Binding name}"
                           FontSize="17"
                           Foreground="#fff"
                           Grid.Column="1" />
                <TextBlock Text="{Binding time}"
                           HorizontalAlignment="Right"
                           FontSize="17"
                           Foreground="#fff"
                           Grid.Column="2" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="SelectedItemTemplate">
            <Grid  Margin="8 8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Kind="Play"
                                         Grid.Column="0"
                                         Foreground="#fff"
                                         Height="30"
                                         Width="30"
                                         HorizontalAlignment="Left" />
                <TextBlock Text="{Binding name}"
                           FontSize="17"
                           Foreground="#fff"
                           Grid.Column="1" />
                <TextBlock Text="{Binding time}"
                           HorizontalAlignment="Right"
                           FontSize="17"
                           Foreground="#fff"
                           Grid.Column="2" />
            </Grid>
        </DataTemplate>
        <Style x:Key="_ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="ContentTemplate" Value="{StaticResource ItemTemplate}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="_Border"
                                Padding="2"
                                SnapsToDevicePixels="true"
                                CornerRadius="4">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="_Border" Property="Background" Value="#FF876400" />
                                <Setter Property="Foreground" Value="Black" />
                                <Setter Property="ContentTemplate" Value="{StaticResource SelectedItemTemplate}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="Black" Height="585" Width="1200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2.3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="5*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Grid.Column="1"
                Background="#171717"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.7*" />
                    <RowDefinition Height="4.3*" />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Ellipse Grid.Row="1"
                         Grid.Column="1"
                         StrokeThickness="3">
                    <Ellipse.Stroke>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="Black" Offset="0.71" />
                            <GradientStop Color="#febb00" />
                            <GradientStop Color="#febb00" Offset="0.6" />
                        </LinearGradientBrush>
                    </Ellipse.Stroke>
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Images/logo.png" />
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel Grid.ColumnSpan="3"
                            Grid.Row="2"
                            Margin="10">
                    <Slider
                        TickFrequency="5"
                        Orientation="Horizontal"
                        Value="25"
                        Width="auto"
                        Foreground="#febb00" />

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Autorenew"
                                                 Style="{StaticResource iconPlay}" />
                        <materialDesign:PackIcon Kind="SkipPrevious"
                                                 Style="{StaticResource iconPlay}" />
                        <materialDesign:PackIcon Kind="PlayCircleOutline"
                                                 Foreground="#febb00"
                                                 Width="55"
                                                 Height="55" />
                        <materialDesign:PackIcon Kind="SkipNext"
                                                 Style="{StaticResource iconPlay}" />
                        <materialDesign:PackIcon Kind="ShuffleVariant"
                                                 Style="{StaticResource iconPlay}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Bài hát liên quan"
                       Foreground="#fff"
                       FontSize="23"
                       FontWeight="DemiBold"
                       Margin="60 0 0 0" />
            <ListBox Grid.Row="1"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 HorizontalContentAlignment="Stretch"
                 ItemsSource="{Binding}"
                 Margin="30 0 15 0"
                 ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" />
        </Grid>
    </Grid>
</UserControl>