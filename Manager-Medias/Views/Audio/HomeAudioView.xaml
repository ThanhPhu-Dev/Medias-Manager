                                    </Border>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="55"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <!--tên thể loại phim-->
                <TextBlock Text="Ballad" Foreground="#fff"
                           FontSize="18"
                           Grid.ColumnSpan="3"
                           Margin="0 0 0 0"/>

                <StackPanel VerticalAlignment="Center" Grid.ColumnSpan="3" Grid.Row="1"
                        HorizontalAlignment="Center">
                    <ItemsControl Name="itc_movie1" ItemsSource="{Binding AudioList[0]}">
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter" >
                                <Setter Property="ContentTemplate" Value="{StaticResource carouselItemDefault}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="ContentTemplate" Value="{StaticResource carouselItemMouse}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.Template>
                            <ControlTemplate TargetType="ItemsControl">
                                <ScrollViewer Name="sv_itc" HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>
                </StackPanel>
                <!--Hai nút để scroll carousel-->
                <Grid Margin="0" Grid.Column="2" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="Black" Opacity=".6" Panel.ZIndex="0" BorderThickness="0" Margin="0" Padding="0" />
                    <RepeatButton
                        Background="Transparent" 
                        BorderThickness="0"
                        HorizontalAlignment="Center" 
                        Foreground="#fff" 
                        Panel.ZIndex="1" 
                        Margin="0" Padding="0">
                        <materialDesign:PackIcon Kind="ChevronRight" Width="55" Height="55" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </RepeatButton>
                </Grid>

                <Grid Margin="0" Grid.Row="1" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="Black" Opacity=".6" Panel.ZIndex="0" BorderThickness="0" Margin="0" Padding="0" />
                    <RepeatButton
                        Background="Transparent" 
                        BorderThickness="0"
                        HorizontalAlignment="Center" 
                        Foreground="#fff" 
                        Panel.ZIndex="1" 
                        Margin="0" Padding="0">
                        <materialDesign:PackIcon Kind="ChevronLeft" Width="55" Height="55" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </RepeatButton>
                </Grid>
            </Grid>
            
