<UserControl x:Class="Manager_Medias.Views.Audio.HomeAudioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manager_Medias.Views.Audio"
             mc:Ignorable="d" 
             xmlns:model="clr-namespace:Manager_Medias.Models"
             xmlns:cvt="clr-namespace:Manager_Medias.Converters"
             d:DesignHeight="585" d:DesignWidth="1200"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <UserControl.Resources>
        <cvt:ConvertImage x:Key="imageCvt"/>


        <DataTemplate DataType="{x:Type model:Audio}" x:Key="carouselItemDefault">
            <Grid Margin="3 1">
                <Image Height="120" Width="250" 
                                   Panel.ZIndex="1"
                                   Source="{Binding Image, Converter={StaticResource imageCvt}}" Stretch="Fill"/>
                <TextBlock Text="Tên phim" Name="tb_namemovie"
                                       Foreground="#fff"
                                       FontSize="20"
                                       FontWeight="DemiBold"
                                      IsHitTestVisible="True"
                                       Panel.ZIndex="0"/>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type model:Movie}" x:Key="carouselItemMouse">
            <Grid Margin="3 1">
                <Image Height="120" Width="250" 
                                   Panel.ZIndex="1" 
                                   Source="{Binding Image, Converter={StaticResource imageCvt}}" Stretch="Fill"/>
                <Border Background="Black" Opacity=".5" Panel.ZIndex="2"/>
                <StackPanel Panel.ZIndex="3" VerticalAlignment="Bottom" Margin="5">
                    <materialDesign:PackIcon Kind="PlayCircleOutline" Width="45" Height="45" 
                                             Foreground="#ffbb00"/>
                    <TextBlock Text="{Binding Name}"
                               Name="tb_namemovie"
                               Foreground="#fff"
                               FontSize="16"
                               FontWeight="DemiBold"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Time, StringFormat={}Thời lượng: {0}}"
                                       Foreground="#fff"
                                       Padding="7 1"/>
                        <TextBlock Text="{Binding Singer, StringFormat={}Ca sĩ: {0}}"
                                       Foreground="#fff"
                                       Padding="7 1"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <Style x:Key="gridItemCarousel" TargetType="Grid">
        </Style>
    </UserControl.Resources>
    <ScrollViewer Background="Black">
        <Grid>
            <Grid.Resources>
                <Style TargetType="RepeatButton">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Width" Value="40"/>
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Setter Property="ClickMode" Value="Hover"/>
                    <EventSetter Event="Click" Handler="Button1_Click"/>

                    <Setter Property="Template" >
                        <Setter.Value>
                            <ControlTemplate TargetType="RepeatButton">
                                <Border>
                                    <ContentPresenter Height="auto"/>
                                </Border>

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="Transparent" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="1" Text="Audio" Foreground="White"
                       FontSize="33" VerticalAlignment="Center" HorizontalAlignment="Center"
                       />

            <!--loai 1-->
            <Grid VerticalAlignment="Top" 
                      Grid.Row="1" Grid.Column="1" >
