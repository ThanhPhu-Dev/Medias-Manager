                        <materialDesign:PackIcon Kind="ChevronLeft" Width="55" Height="55" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </RepeatButton>
                </Grid>
            </Grid>
            <!--Loại 3-->
            <Grid VerticalAlignment="Top" 
                      Grid.Row="3" Grid.Column="1" >
                <Grid.Resources>

                    <Style TargetType="RepeatButton">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Width" Value="40"/>
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="ClickMode" Value="Hover"/>
                        <!--<EventSetter Event="Click" Handler="Button_Click"/>-->

                        <Setter Property="Template" >
                            <Setter.Value>
                                <ControlTemplate TargetType="RepeatButton">
                                    <Border>
                                        <ContentPresenter Height="auto"/>
                                    </Border>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="55"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <!--tên thể loại phim-->
                <TextBlock Text="Trữ tình" Foreground="#fff"
                           FontSize="18"
                           Grid.ColumnSpan="3"
                           Margin="0 0 0 0"/>

                <StackPanel VerticalAlignment="Center" Grid.ColumnSpan="3" Grid.Row="1"
