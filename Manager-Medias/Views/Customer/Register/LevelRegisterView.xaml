    <UserControl.Resources>
        <cvt:ChangeColorLevel_1Converter x:Key="colorLv1"/>
        <cvt:ChangeColorLevel_2Converter x:Key="colorLv2"/>
        <cvt:ChangeColorLevel_3Converter x:Key="colorLv3"/>

        <Style TargetType="TextBlock" x:Key="text-primary">
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="txtcolumn">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="Padding" Value="10 0 0 0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="txtelemnt">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="FontWeight" Value="bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button" x:Key="btn_selected">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="auto"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True" >
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--animation cho lv1-->
        <Storyboard x:Key="ChangeColorPrimary_lv1" >
            <ColorAnimation 
                 To="#222"
                 Storyboard.TargetName="tb_title_lv1"
                 Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
            <ColorAnimation 
                 To="#FFbb00"   
                 Storyboard.TargetName="bd_lv1"
                 Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"/>
            <ColorAnimation 
                 To="#FFbb00"   
                 Storyboard.TargetName="btn_lv1"
                 Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"/>
            <ColorAnimation
                 To="#FFbb00"   
                 Storyboard.TargetName="txt_price_lv1"
                 Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
            <ColorAnimation 
                 To="#FFbb00"   
                 Storyboard.TargetName="txt_row2_lv1"
                 Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
            <ColorAnimation  
                 To="#FFbb00"   
                 Storyboard.TargetName="txt_row3_lv1"
                 Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>

            <!--//lv1-->
            <ColorAnimation 
                 To="#bdbdbd"
                 Storyboard.TargetName="tb_title_lv2"
                 Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"/>
            <ColorAnimation 
                 To="#bdbdbd"   
                 Storyboard.TargetName="bd_lv2"
                 Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"/>
