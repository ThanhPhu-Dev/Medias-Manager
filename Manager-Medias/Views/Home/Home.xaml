            <StackPanel DockPanel.Dock="Bottom"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button Width="100"
                        Name="btnSwitchHomeSuggestions"
                        Content="{materialDesign:PackIcon Kind=ArrowDropDown,Size=30}"
                        Click="btnSwitchHomeSuggestions_Click">
                </Button>
            </StackPanel>
            <DockPanel>
                <syncfusion:Carousel Grid.Row="1"
                                     x:Name="carousel"
                                     OpacityFraction="0.10"
                                     VisualMode="CustomPath"
                                     ItemsSource="{Binding CarouselCollection}">
                    <syncfusion:Carousel.Path>
                        <Path Data="M0,300 L600,300" />
                    </syncfusion:Carousel.Path>
                    <syncfusion:Carousel.ItemTemplate>
                        <DataTemplate>
                            <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown"
                                  MouseEnter="Grid_MouseEnter"
                                  MouseLeave="Grid_MouseLeave">
                                <Image HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center"
                                       Width="1300"
                                       Source="{Binding Image}" />
                                <TextBlock Text="{Binding Title}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="100 0 0 50"
                                           FontSize="50"
                                           FontWeight="Bold" />
                                <TextBlock Text="{Binding Description}"
                                           Foreground="Black"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="100 130 0 50"
                                           FontSize="30"
                                           Background="Orange"
                                           FontWeight="Bold" />
                            </Grid>
                        </DataTemplate>
                    </syncfusion:Carousel.ItemTemplate>
                </syncfusion:Carousel>
            </DockPanel>
