<UserControl x:Class="Manager_Medias.Views.Movie.HomeMovieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manager_Medias.Views.Movie"
             mc:Ignorable="d" 
             xmlns:model="clr-namespace:Manager_Medias.Models"
             xmlns:cvt="clr-namespace:Manager_Medias.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DesignHeight="585" d:DesignWidth="1200"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <UserControl.Resources>
        <cvt:ConvertImage x:Key="imageCvt"/>
    </UserControl.Resources>
    <ScrollViewer Background="Black">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="200"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid  VerticalAlignment="Top" 
                      Grid.Row="1" Grid.Column="1">
                <Grid.Resources>
                    <DataTemplate DataType="{x:Type model:Movie}">
                        <Border Margin="3 1">
                            <Image Height="120" Width="250" Source="{Binding Poster, Converter={StaticResource imageCvt}}" Stretch="Fill"/>
                        </Border>
                    </DataTemplate>
                    <Style TargetType="RepeatButton">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Width" Value="40"/>
                        <Setter Property="ClickMode" Value="Hover"/>
                        <EventSetter Event="Click" Handler="Button_Click"/>

                        <!--<Setter Property="Template" >
                            <Setter.Value>
                                <ControlTemplate TargetType="RepeatButton">
                                    <Border>
                                        <ContentPresenter/>
                                    </Border>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>-->
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center" Grid.ColumnSpan="3"
                        HorizontalAlignment="Center">
                    <ItemsControl Name="itc_movie" ItemsSource="{Binding MovieList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.Template>
                            <ControlTemplate TargetType="ItemsControl">
                                <ScrollViewer Name="sv_itc" HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>
                    <WrapPanel Margin="2">
                        <WrapPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="5"/>
                                <Setter Property="Width" Value="40"/>
                                <EventSetter Event="Click" Handler="Button_Click"/>
                            </Style>
                        </WrapPanel.Resources>

                    </WrapPanel>
                </StackPanel>

                <!--Hai nút để scroll carousel-->

                <!--<RepeatButton 
                    Grid.Column="2" 
                    HorizontalAlignment="Right"
                    Margin="0" Padding="0">
                    <materialDesign:PackIcon Kind="ChevronRight" />
                </RepeatButton>-->
                <Grid Margin="0" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="Black" Opacity=".6" Panel.ZIndex="0" BorderThickness="0" Margin="0" Padding="0" />
                    <RepeatButton
                        Background="Transparent" 
                        BorderThickness="0"
                        HorizontalAlignment="Center" 
                        Foreground="#fff" 
                        Panel.ZIndex="1" 
                        Margin="0" Padding="0">
                        <materialDesign:PackIcon Kind="ChevronRight" Width="55" Height="55" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </RepeatButton>
                </Grid>
                
                <Grid Margin="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="Black" Opacity=".6" Panel.ZIndex="0" BorderThickness="0" Margin="0" Padding="0" />
                    <RepeatButton
                        Background="Transparent" 
                        BorderThickness="0"
                        HorizontalAlignment="Center" 
                        Foreground="#fff" 
                        Panel.ZIndex="1" 
                        Margin="0" Padding="0">
                        <materialDesign:PackIcon Kind="ChevronLeft" Width="55" Height="55" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </RepeatButton>
                </Grid>
            </Grid>

        </Grid>

    </ScrollViewer>
</UserControl>
