                                        </RepeatButton>
                                    </Grid>-->
                                </Grid>
                                <!--</StackPanel>-->

                            </GroupBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>