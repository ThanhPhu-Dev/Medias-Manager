<UserControl x:Class="Manager_Medias.Views.Movie.HomeMovieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manager_Medias.Views.Movie"
             mc:Ignorable="d" 
             xmlns:model="clr-namespace:Manager_Medias.Models"
             xmlns:cvt="clr-namespace:Manager_Medias.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DesignHeight="585" d:DesignWidth="1200"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <UserControl.Resources>
        <cvt:ConvertImage x:Key="imageCvt"/>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="200"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <GroupBox Header="Hành động" VerticalAlignment="Top" 
                      Grid.Row="1" Grid.Column="1">
                <GroupBox.Resources>
                    <DataTemplate DataType="{x:Type model:Movie}">
                        <Border BorderBrush="#ffbb00" BorderThickness="2" CornerRadius="3">
                            <Image Height="180" Width="350" Source="{Binding Poster, Converter={StaticResource imageCvt}}" Stretch="Fill"/>
                        </Border>
                    </DataTemplate>
                </GroupBox.Resources>
                <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <ItemsControl Name="itc_movie" ItemsSource="{Binding MovieList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.Template>
                            <ControlTemplate TargetType="ItemsControl">
                                <ScrollViewer Name="sv_itc" HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>
                    <WrapPanel Margin="2">
                        <WrapPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="5"/>
                                <Setter Property="Width" Value="40"/>
                                <EventSetter Event="Click" Handler="Button_Click"/>
                            </Style>
                        </WrapPanel.Resources>
                        
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="RepeatButton">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Width" Value="40"/>
                        <Setter Property="ClickMode" Value="Hover"/>
                        <EventSetter Event="Click" Handler="Button_Click"/>
                    </Style>
                </StackPanel.Resources>
                <RepeatButton >Left</RepeatButton>
                <RepeatButton >Right</RepeatButton>
            </StackPanel>
            
        </Grid>

    </ScrollViewer>
</UserControl>
